<!-- components/form_components -->

{{block inputField(name, title)}}
    <div>
        <div class="label">
            <span class="label-text">{{title}}</span>
        </div>
        <input 
            id="{{ name }}-field" 
            name="{{ name }}" 
            class="input input-bordered"
        />
        <label id="{{ name }}-field-error"/>
    </div>
{{end}}